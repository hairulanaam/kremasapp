<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper_alert_info"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/cross" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/heading_alert_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Tidak Bisa Melakukan Pembayaran"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/title_alert_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Jumlah pembayaran harus sesuai angsuran perbulan beserta denda"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btntutup"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/line_et"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:text="Tutup"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>