<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lupa_pw"
            android:text="Verifikasi Kode"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:textSize="25dp"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/vector1"
            android:src="@drawable/vector2"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="Masukkan kode OTP yang telah dikirimkan melalui pesan email"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/verifikasi_et"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:background="@drawable/line_et2"
            android:fontFamily="@font/poppinsregular"
            android:textSize="22dp"
            android:inputType="number" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/verifikasi_button"
            android:text="Verifikasi"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="22dp"/>
    </LinearLayout>

</RelativeLayout>