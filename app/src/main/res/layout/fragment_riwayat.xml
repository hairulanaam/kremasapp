<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".RiwayatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp" android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/selectedDate"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:gravity="center|start"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/line_et2"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginStart="10dp"
            android:paddingStart="8dp"/>

        <Button
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cari"
            android:textSize="18sp"
            android:background="@drawable/active"
            app:backgroundTint="@null"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_riwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@null"
        android:scrollbars="vertical"
        tools:listitem="@layout/list_riwayat" />

</LinearLayout>