<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LupaPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lupa_pw"
            android:text="Lupa Password"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:textSize="25dp"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/vector1"
            android:src="@drawable/vector1"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="Kode OTP akan dikirimkan melalui email untuk verifikasi"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/lupa_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/line_et2"
            android:fontFamily="@font/poppinsregular"
            android:hint="Masukkan email anda"
            android:textSize="17dp"
            android:inputType="text"
            android:paddingLeft="12dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/lupa_button"
            android:text="Kirim"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="22dp"/>

    </LinearLayout>

</RelativeLayout>